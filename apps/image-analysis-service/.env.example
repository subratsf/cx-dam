# Image Description Provider: "ollama" (local) or "openai" (cloud)
IMAGE_DESCRIPTION_PROVIDER=ollama

# Ollama Settings (for local development)
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI Settings (for Heroku/production)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_VISION_MODEL=gpt-4o-mini

# Qdrant Settings - Local (for development)
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Qdrant Settings - Cloud (for Heroku/production)
# Get free tier at https://cloud.qdrant.io
# QDRANT_URL=https://your-cluster.qdrant.io
# QDRANT_API_KEY=your-qdrant-api-key

# Content Moderation
CONTENT_MODERATION_THRESHOLD=0.6
